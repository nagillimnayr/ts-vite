{
    "compilerOptions": {
        "rootDir": "./src/",
        "outDir": "./dist/",
        "module": "ES2022",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true
    },
    "ts-node": { "esm": true }
}
